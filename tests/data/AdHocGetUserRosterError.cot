<iq id="get-roster"
    from="$(to-jid)"
    to="$(from-jid)"
    type="result">
    <command xmlns="http://jabber.org/protocol/commands"
        status="completed"
        node="http://jabber.org/protocol/admin#get-user-roster">
        <x xmlns="jabber:x:data" type="result">
			   <field type="fixed" var="Error">
				   <value>You do not have enough permissions to retrieve roster for user in this domain.</value>
			   </field>
        </x>
    </command>
</iq>
}