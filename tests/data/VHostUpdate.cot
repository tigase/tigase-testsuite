send: {
<iq type="set" to="vhost-man@$(hostname)" id="aacaa">
		<command xmlns="http://jabber.org/protocol/commands" node="VHOSTS_UPDATE"/>
</iq>
}
expect: {
<iq from="vhost-man@$(hostname)" type="result" to="$(from-jid)" id="aacaa">
	<command xmlns="http://jabber.org/protocol/commands" status="executing" node="VHOSTS_UPDATE">
		<x xmlns="jabber:x:data" type="result">
			 <field var="VHost"><value/></field>
			 <field type="list-single" label="Enabled" var="Enabled">
				<value>true</value>
				<option label="true"><value>true</value></option>
				<option label="false"><value>false</value></option>
			</field>
		</x>
		<actions execute="complete"><complete/></actions>
	</command>
</iq>
}

send: {
<iq type="set" to="vhost-man@$(hostname)" id="aacba">
	<command xmlns="http://jabber.org/protocol/commands" node="VHOSTS_UPDATE">
		<x xmlns="jabber:x:data" type="submit">
			<field type="text-single" var="VHost"><value>$(cdata)</value></field>
			<field type="list-single" var="Enabled"><value>true</value></field>
		</x>
	</command>
</iq>
}
expect: {
<iq from="vhost-man@$(hostname)" type="result" to="$(from-jid)" id="aacba">
	<command xmlns="http://jabber.org/protocol/commands" status="completed" node="VHOSTS_UPDATE">
		<x xmlns="jabber:x:data" type="result">
			<field type="fixed" var="Note">
			 	<value>Current number of VHosts: $(number)</value>
			</field>
		</x>
	</command>
</iq>
}
